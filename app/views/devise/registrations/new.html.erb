<div class="container"> 
  <div class="row"> 
    <div class="col-md-6 col-md-offset-3">
      <div class= "jumbotron">
      <h2>Registrate Gratis</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

           
          <div class="form-group">
            <div class="field">
               <%= f.label :nombre %><br />
              <%= f.text_field :nombre, autofocus: true, :class => 'form-control', :placeholder => 'Nombre' %>
            </div>
          </div>

          <div class="form-group">
            <div class="field">
              <%= f.label :celular %><br />
              <%= f.text_field :phone, autofocus: true, :class => 'form-control', :placeholder => '+56911133322' %>
            </div>
          </div>

          <div class="form-group">
            <div class="field">
              <%= f.label :tienda %><br />
              <%= f.text_field :tienda, autofocus: true, :class => 'form-control', :placeholder => 'Puma' %>
            </div>
          </div>
          
          <div class="form-group">
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, :class => 'form-control', :placeholder => 'ejemplo@almuerzo.cl' %>
            </div>
          </div>

          <div class="form-group">
            <div class="field">
              <%= f.label :contraseÃ±a %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", :class => 'form-control'  %>
            </div>
          </div>  

          <div class="form-group">
            <div class="field">
              <%= f.label :confirme_contraseÃ±a %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control'  %>
            </div>
          </div>  

            <div class="actions">
             <%= f.submit "Registrarse" %>
            </div>
            
        <% end %>   

        <%= render "devise/shared/links" %>
      </div>  
    </div>  
  </div>  
</div>